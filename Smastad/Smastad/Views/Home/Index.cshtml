@{
}
@model Errand

<div id="content">
    <section id="mainColumn">
        <h2>Välkommen att fylla i din anmälan av miljöbrott</h2>
        <p class="info">I Småstad är inga brott för små för att anmälas</p>

        <p>Fyll i formuläret nedan, alla rutor markerade med stjärna (*) måste fyllas i.</p>

        <form asp-controller="Home" asp-action="citizen/validate.html" method="post">
            <div asp-validation-summary="All" class="error"></div>
            <p>
                <input type="hidden" name="isSubmitted" value="true" />
            </p>
            <p>
                <span class="label">Var har brottet skett någonstans?</span><br />
                <input asp-for="Place" /> *
            </p>
            <p>
                <span class="label">Vilken typ av brott?</span><br />
                <input asp-for="TypeOfCrime" /> *
            </p>
            <p>
                <span class="label">När skedde brottet?</span><br />
                <input asp-for="DateOfObservation" /> *
            </p>
            <p>
                <span class="label">Ditt namn (för- och efternamn):</span><br />
                <input asp-for="InformerName" /> *
            </p>
            <p>
                <span class="label">Din telefon:</span><br />
                <input asp-for="InformerPhone" /> *
            </p>
            <p>
                <span class="label">Beskriv din observation<br /> (ex. namn på misstänkt person):</span><br />
                <textarea asp-for="Observation" rows="5" cols="16"></textarea>
            </p>
            <p>
                <input class="button" type="submit" value="Skicka in"/>
            </p>
        </form>
    </section><!-- End Left -->

    <section><!-- Add Cookie part-->
        <h1>Specify your preferences :</h1>
        <form asp-controller="Home" asp-action="WriteCookies">
            <select name="setting">
                <option value="fontName">Font Name</option>
                <option value="fontSize">Font Size</option>
                <option value="color">Color</option>
            </select>
            <input type="text" name="settingValue" />
            <input type="checkbox" name="isPersistent"
                   value="true" /> Is Persistent?
            <input type="submit" value="Write Cookie" />
        </form>

        <h4>@ViewBag.Message</h4>

        <h4>
            <a asp-action="ReadCookies" asp-controller="Home">
                Read Cookies
            </a>
        </h4>
    </section>

    <footer>
        &copy; Småstads Kommun All rights reserved.
    </footer>
</div><!-- End Content -->
